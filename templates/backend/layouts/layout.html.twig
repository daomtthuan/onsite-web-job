<!doctype html>
<html lang="vi">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="shortcut icon" href="/assets/shared/ico/logo.ico">

  <link rel="stylesheet" href="/assets/shared/css/custom.bootstrap.css" type="text/css" />
  <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css" type="text/css" />
  <link rel="stylesheet" href="/assets/shared/css/style.css" type="text/css" />
  <link rel="stylesheet" href="/assets/backend/css/style.css" type="text/css" />

  <title>
    Onsite Web Job -
    {% block title %}{% endblock %}
  </title>

  {% block customstyles %}{% endblock %}
</head>

<body class="d-flex flex-column h-100">
  {{ include('backend/layouts/includes/header.html.twig') }}

  <div class="container-fluid">
    <div class="row">
      {{ include('backend/layouts/includes/sidebar.html.twig') }}

      <main role="main" class="col-md-10 ml-sm-auto px-4 mb-2">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">
            {% block headline %}{% endblock %}
          </h1>
        </div>

        {% block content %}{% endblock %}
      </main>
    </div>
  </div>

  {{ include('backend/layouts/includes/footer.html.twig') }}

  <script src="/node_modules/jquery/dist/jquery.min.js"></script>
  <script src="/node_modules/popper.js/dist/umd/popper.min.js"></script>
  <script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
  <!-- <script src="/assets/vendor/feather/feather.min.js"></script> -->

  <!-- Thư viện Jquery validation -->
  <!-- <script src="/assets/vendor/jquery-validation/jquery.validate.min.js"></script> -->
  <!-- <script src="/assets/vendor/jquery-validation/localization/messages_vi.min.js"></script> -->

  <script src="/assets/backend/js/app.js"></script>

  {% block customscripts %}{% endblock %}
</body>

</html>